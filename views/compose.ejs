<%- include('partials/header'); -%>

<h2>Compose</h2>


<form action="/compose" method="post">
	
  <div class="form-group">
    <label for="composePostTitle">Title</label>
    <input type="text" class="form-control" name="composePostTitle" placeholder="Title">
  </div>
  <div class="form-group">
    <label for="composePost">Post</label>
    <textarea class="form-control" name="composePost" rows="4" placeholder="Post"></textarea>
  </div>

  <button class="btn btn-dark" type="submit" name="composePostButton">Publish</button>

</form>

<%- include('partials/footer'); -%>